{% extends 'base.html.twig' %}

{% block body %}
    <h1>Souscategories list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for souscategorie in souscategories %}
            <tr>
                <td><a href="{{ path('souscategorie_show', { 'id': souscategorie.id }) }}">{{ souscategorie.id }}</a></td>
                <td>{{ souscategorie.nom }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('souscategorie_show', { 'id': souscategorie.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('souscategorie_edit', { 'id': souscategorie.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('souscategorie_new') }}">Create a new souscategorie</a>
        </li>
    </ul>
{% endblock %}
