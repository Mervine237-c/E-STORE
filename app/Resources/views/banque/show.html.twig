{% block body %}
    <h1>Banque</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ banque.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ banque.nom }}</td>
            </tr>
            <tr>
