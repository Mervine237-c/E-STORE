{% extends 'corps2.html.twig' %}

{% block body %}

                    <section id="dom">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title">{{ produit.nom }} / {{ produit.souscategorie }}</h4>
                                        <p class="card-text">{{ produit.escription }}.</p>
                                    </div>
                                    <div class="card-content ">
                                        <div class="card-body card-dashboard table-responsive">

<center>
                                                    <img style="width: 300px;height: 250px;border-radius: 50%;" src="{{ asset('uploads/images/produit/') ~ produit.imageName}}" alt="{{ produit.nom }}" />


</center>
                                            <table class="table table-striped table-bordered dom-jQuery-events">
                                                <tbody>
                                                <tr>
                                                    <th>Nom</th>
                                                    <td>{{ produit.nom }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Sous Catégorie</th>
                                                    <td>{{ produit.souscategorie }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Description</th>
                                                    <td>{{ produit.escription }}</td>
                                                </tr>
                                                <tr>
                                                    <th>Quantite</th>
                                                    <td>{{ produit.quantite }}</td>
                                                </tr>
                                                </tbody>


                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>


    <ul>
        <li>
            <a href="{{ path('Produit_index') }}">Retourner à la liste</a>
        </li>
        <li>
            <a href="{{ path('Produit_edit', { 'id': produit.id }) }}">Editer</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
