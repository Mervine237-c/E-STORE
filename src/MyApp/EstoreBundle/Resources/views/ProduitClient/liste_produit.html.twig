{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produits list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Escription</th>
            <th>Quantite</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td><a href="{{ path('Produit_show', { 'id': produit.id }) }}">{{ produit.id }}</a></td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.escription }}</td>
                <td>{{ produit.quantite }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('Produit_show', { 'id': produit.id }) }}">show</a>
                        </li>
                        <li>
{#                            <a href="{{ path('commande_new', { 'id': produit.id }) }}">Commander</a>#}

                            <button id="myBtn">Commander</button>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('Produit_new') }}">Create a new produit</a>
        </li>
    </ul>



{% endblock %}
